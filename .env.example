# Sales AI Agent Platform Environment Variables
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://sales_ai_user:your_password@localhost:5432/sales_ai_agent
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sales_ai_agent
POSTGRES_USER=sales_ai_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Keys
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_64_character_hex_encryption_key_for_sensitive_data

# External API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
CLEARBIT_API_KEY=your_clearbit_api_key_here

# Feature Flags
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_SCALING=true
ENABLE_SECURITY_MONITORING=true

# Performance Settings
MAX_CONCURRENT_JOBS=10
MAX_CONCURRENT_CALLS=50
MAX_CONCURRENT_EMAILS=100
PREDICTION_CACHE_TTL=3600

# Agent Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=3000
CLAUDE_TEMPERATURE=0.2